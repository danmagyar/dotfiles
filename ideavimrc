source ~/.vimrc

set clipboard+=ideaput
set ideajoin
set ideamarks

" required acejump plugin colors in order:
" E3C181 282C34 DC7076 3AFF52 000000
set easymotion
set surround
nmap <leader>c :action CheckinProject<cr>
nmap [c :action VcsShowPrevChangeMarker<cr>
nmap ]c :action VcsShowNextChangeMarker<cr>

nmap <leader>uh :action Vcs.RollbackChangedLines<cr>

" cdep log failures to analyzable stack trace in pycharm
nmap <leader>cdep1 :%s#/data/jenkins/workspace/Cluster-Setup-CDPD/#./#g<cr>
nmap <leader>cdep2 :%s#/target/env/local#/target/env#g<cr>

" reaveal current file in project view
nnoremap <Leader>2 :action SelectInProjectView<CR>

" reaveal current file in project view
nnoremap <Leader>3 :action ActivateStructureToolWindow<cr>
